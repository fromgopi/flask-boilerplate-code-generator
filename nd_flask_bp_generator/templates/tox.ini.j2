[tox]
envlist = py37,py38,py39,py310,flake8,mypy
isolated_build = True

[testenv]
deps =
    -rrequirements.txt
    -rrequirements-dev.txt
commands =
    pytest --cov=app tests/

[testenv:flake8]
deps = flake8
commands = flake8 app tests

[testenv:mypy]
deps =
    -rrequirements.txt
    -rrequirements-dev.txt
commands = mypy app 